<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:fillViewport="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Name:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:padding="7dp"
                        android:hint="Name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Mobile No.:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:hint="Mobile"
                        android:maxLength="10"
                        android:padding="7dp"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Gender"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:padding="7dp"
                        android:textSize="12sp">

                        <Spinner
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"></Spinner>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="Application Demo Given"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="7dp"
                        android:textSize="12sp">

                        <ToggleButton
                            android:id="@+id/app_demo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOff="NO"
                            android:textOn="YES"
                            android:textSize="18sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="Downloded:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="7dp"
                        android:textSize="12sp">

                        <ToggleButton
                            android:id="@+id/downloded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOff="NO"
                            android:textOn="YES"
                            android:textSize="18sp"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="Availed Offer:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="7dp"
                        android:textSize="12sp">

                        <ToggleButton
                            android:id="@+id/availed_offer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOff="NO"
                            android:textOn="YES"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="Dedicated Phone :"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="7dp"
                        android:textSize="12sp">

                        <ToggleButton
                            android:id="@+id/dedicated_phone_toggle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOff="NO"
                            android:textOn="YES"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/dedicated_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:layout_marginLeft="3dp"
                        android:text="Remark"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                    <EditText
                        android:id="@+id/dedicated_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rouded_corner"
                        android:hint="Remark"
                        android:padding="8dp"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:text="In Store Network Issue :"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="7dp"
                        android:textSize="12sp">
                        <ToggleButton
                            android:checked="true"
                            android:id="@+id/store_network_iToggle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textOff="NO"
                            android:textOn="YES"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/demos_network_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:layout_marginLeft="3dp"
                        android:text="Remark"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                    <EditText
                        android:id="@+id/demos_network_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rouded_corner"
                        android:hint="Remark"
                        android:padding="8dp"
                        android:textSize="12sp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Brand Out Of Stock:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/brand_edtTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:padding="8dp"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Out Of Stock Asset:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/asset_edtTxt"
                        android:layout_width="0dp"
                        android:imeOptions="actionDone"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textSize="12sp" />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:text="Remarks:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="0dp"
                        android:imeOptions="actionDone"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:background="@drawable/rouded_corner"
                        android:inputType="text"
                        android:hint="Remark"
                        android:padding="7dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--   <Button
                       android:visibility="gone"
                       android:layout_marginTop="6dp"
                       android:id="@+id/btn_add"
                       android:layout_width="150dp"
                       android:textColor="@color/white"
                       android:text="Add"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:background="@color/colorPrimary"
                       android:layout_height="35dp" />-->
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/r"
            android:layout_below="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">
            <TextView
                android:padding="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_marginLeft="3sp"
                android:paddingLeft="2dp"
                android:text="Names"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />
            <TextView
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorPrimary"
                android:text="Gender"
                android:gravity="center"
                android:layout_marginLeft="3sp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginLeft="3sp"
                android:text="Mobile No"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:text="Status"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginLeft="3sp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:paddingLeft="5dp"/>

            <TextView
                android:text="Wrong"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginLeft="3sp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/r"
            android:layout_marginBottom="?actionBarSize"
            android:id="@+id/demos_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
